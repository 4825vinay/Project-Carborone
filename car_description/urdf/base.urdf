<?xml version="1.0"?>
<robot name="car">
    <link name="base_link">
        <visual>
            <geometry>
                <box size = "0.3 0.2 0.05"/>
            </geometry>
            <material name="white">
                <color rgba = "1 1 1 1"/>
            </material>
        </visual>
            <collision>
                <geometry>
                    <box size = "0.3 0.2 0.05"/>
                </geometry>
            </collision>
            <inertial>
                <mass value="1"/>
                <inertia ixx="0.0077" ixy="0" ixz="0" iyy="0.010" iyz="0" izz="0.003"/>
            </inertial>                   
    </link>
    <link name="base_footprint">
